<!DOCTYPE html>
<html>
<head>
  <title>Baywing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>

<div class="container">
  <div class="row">
    <div class="col-md-6 pull-left" style="margin-left: 0">
      <%= image_tag 'baywing.png' %>
    </div>
    <div class="col-md-6">
      <h4 class="pull-right header">  <%=  link_to  "Harris's Hawk Pedigree and Hunting Performance Registry", root_path  %> </h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 nav-bar-item"> <%= link_to "Pedigree Registration", pedigree_index_path %> </div>
    <div class="col-md-4 nav-bar-item"> <%= link_to "Hunting Evaluation",    hunting_index_path %>  </div>
    <div class="col-md-4 nav-bar-item"> <%= link_to "Download Database",     root_path %>           </div>

  </div>


  <%= yield %>
</div>

</body>
</html>
